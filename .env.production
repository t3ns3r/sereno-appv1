# CONFIGURACIÓN PARA PRODUCCIÓN EN HOSTINGER
# Copia este archivo a .env y actualiza con tus datos reales

# Database - Actualizar con datos de Hostinger
DATABASE_URL="postgresql://usuario:password@localhost:5432/sereno_db"

# JWT - CAMBIAR POR CLAVES SEGURAS
JWT_SECRET="tu-jwt-secret-super-seguro-de-64-caracteres-minimo-para-produccion"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=production
FRONTEND_URL="https://tu-dominio.com"

# Redis (si Hostinger lo soporta)
REDIS_URL="redis://localhost:6379"

# Push Notifications (opcional por ahora)
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_EMAIL="tu-email@ejemplo.com"

# APIs externas (configurar cuando las necesites)
GOOGLE_SPEECH_API_KEY=""
OPENAI_API_KEY=""
GOOGLE_MAPS_API_KEY=""

# Pusher (para tiempo real)
PUSHER_APP_ID=""
PUSHER_KEY=""
PUSHER_SECRET=""
PUSHER_CLUSTER="us2"